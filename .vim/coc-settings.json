{
  "suggest.noselect": false,
  "eslint.autoFixOnSave": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "vim-devicons",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "wxss.validate": false,
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.cssInJs": true,
  "markdownlint.config": {
    "default": true,
    "line_length": false
  },
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },
    "racket": {
      "command": "racket",
      "args": [
        "--lib",
        "racket-langserver"
      ],
      "filetypes": [
        "scheme"
      ]
    }
  }
}
