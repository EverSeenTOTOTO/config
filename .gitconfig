[user]
  name = EverSeenTOTOTO
  email = everseenflash@163.com
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = vim
[color]
    ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold # line info
  old = red # deletions
  new = green # additions
[color "status"]
  added = green
  changed = red
  untracked = yellow
[alias]
  ai = add -i
  b = branch 
  c = commit -m
  d = diff
  cln = clone --recursive
  # Switch to a branch, creating it if necessary.
  # Show verbose output about tags, branches or remotes
  tags = tag -l
  branches = branch --all
  remotes = remote --verbose
  po = push origin
  pu = push upstream
  cp = cherry-pick
  st = status --column -sb
  su = stash -u
  ll = log --pretty=oneline -n 99 --graph --abbrev-commit --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge --skip
  process = git-lfs filter-process
[branch]
  sort = -committerdate
[commit]
  gpgsign = false
[stash]
  showPatch = 1
  autocorrect = 1
[merge]
  tool = vimdiff
  log = true
  conflictstyle = diff3
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[pull]
  ff = only
[push]
  default = simple
[help]
  autocorrect = 1
[init]
  defaultBranch = main
